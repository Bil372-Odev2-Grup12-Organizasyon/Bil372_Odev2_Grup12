@model UserSignInViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form class="w-50 mx-auto p-4 mt-3 shadow" asp-action="Login">
        <h4 class="text-center lead">Giriş Yap</h4>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
            <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly">
        </div>
        <input type="submit" class="btn btn-primary btn-sm" value="Giriş Yap" />
        <small> Hesabınız Yok mu ?</small> <a asp-action="KayıtOl" class="btn btn-link">Kayıt Ol</a>
    </form>
</body>
</html>
