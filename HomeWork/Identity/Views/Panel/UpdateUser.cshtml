@model UserUpdateViewModel
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="UpdateUser" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <span asp-validation-for="Surname" class="text-danger"></span>
        <input asp-for="Surname" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <input asp-for="PhoneNumber" />
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label>Bir Önceki Resminiz</label>
                <img src="~/img/@Model.PictureUrl" alt="@Model.Name" class="w-100 img-fluid" />
            </div>
            <div class="col-md-8">
                <input type="file" asp-for="Picture" />
            </div>

        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <button class="btn btn-info btn-sm" type="submit">Kaydet</button>
</form>
