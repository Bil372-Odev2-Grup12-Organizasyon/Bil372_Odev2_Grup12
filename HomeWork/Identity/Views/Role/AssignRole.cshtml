@model List<RoleAssignViewmodel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="AssignRole" asp-controller="Role" method="post" class="w-75 p-3 mx-auto">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />

            <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].Exist">@Model[i].RoleName</label>
        </div>
    }

    <input type="submit" value="Kaydet" class="btn btn-info" />

</form>

